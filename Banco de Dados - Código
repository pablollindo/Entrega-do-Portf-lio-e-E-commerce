-- Criando o banco de dados
CREATE DATABASE contato_portfolio;

-- Usando o banco de dados criado
USE contato_portfolio;

-- Criando a tabela mensagens
CREATE TABLE mensagens (
    id INT AUTO_INCREMENT PRIMARY KEY,   -- Identificador único para cada mensagem
    nome VARCHAR(100) NOT NULL,           -- Nome do visitante
    telefone VARCHAR(25),                 -- Telefone do visitante
    email VARCHAR(150) NOT NULL,          -- E-mail do visitante
    empresa VARCHAR(100),                 -- Empresa ou instituição (opcional)
    assunto VARCHAR(200) NOT NULL,        -- Assunto da mensagem
    mensagem TEXT NOT NULL,               -- Corpo da mensagem
    data_envio TIMESTAMP DEFAULT CURRENT_TIMESTAMP -- Data e hora do envio da mensagem
);

